
<% if params['page'] 
		page = params['page'].to_i
   else
    page = page.to_i
   end
%>


<div class="point">

<table class="maintable">
<tr>
<td>

<div>
	<div class="snippets">	
	<h2>Snippets</h2>
		<% @point.snippets.each do |snippet| %>
		<%=	render_partial 'snippets/snippet', snippet, :options => {:nopoint => true} %>
		<% end %>
	</div>
		
</div>

</td><td>

<div>

	<div class="topics">
		<h2>Topics</h2>
		<div id="topiclist<%= @point.id %>" class="topiclist">
			<% @point.topics.each do |c| %>
				<div class="topic_ref"><%= link_to c.txt, topic_path(c), :target => "_top" -%> </div>
			<% end  %>
		</div>
		<%=	render_partial 'points/pointnewtopic', @point %>
	</div>

	<div class="points">
		<h2>Related Points</h2>

		<%=	render_partial 'points/pointlinks', @point.supporting_links(@user), :options => {:linkedto=>@point, :title=>'supporting', :rel=>'supports'} %>
		<%=	render_partial 'points/pointlinks', @point.same_links(@user), :options => {:linkedto=>@point, :title=>'same', :rel=>'same'} %>
		<%=	render_partial 'points/pointlinks', @point.opposing_links(@user), :options => {:linkedto=>@point, :title=>'opposing', :rel=>'opposes'} %>
		<%=	render_partial 'points/pointlinks', @point.opposite_links(@user), :options => {:linkedto=>@point, :title=>'opposite', :rel=>'opposite'} %>
		<!-- 
		<% @point.point_links_a.each do |pl| %>
			<div class='pointlink'><div class="pointlink_how"><%= pl.howlinked %></div>
					<%= link_to pl.point_b.txt, point_path(pl.point_b), :target => "_top" -%></div>
		<% end  %>

		<% @point.point_links_b.each do |pl| %>
			<div class='pointlink'><div class="pointlink_how"><%= pl.howlinked %></div>
					<%= link_to pl.point_a.txt, point_path(pl.point_a), :target => "_top" -%></div>
		<% end  %>
		-->
		
		<%=	render_partial 'points/pointnewlink', @point %>
	</div>


</div>
	<br/>

</td>
</tr>
</table>


</div>
