<%= '<font color="red">'+@auth_error+'</font><hr />' if @auth_error %>
<% form_tag(:action => 'login') do %>
  Email:
  <%= text_field_tag :email, params[:email] %>
  <br /><br />
  Password:
  <%= password_field_tag :password, params[:password] %>
  <br /><br />
  <%= submit_tag "log in" %>
<% end %>
