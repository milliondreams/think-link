<div class="box yellowbox mainbox">
<div class='boxbody'>

	<h1 class='hidden'>Disputed Claims</h1>

	<form id="mainsearch" method="get" action="/thinklink/search">
		<span class='prompt'>I dispute the claim that...</span>
		<input type="text" name="query" class='search tempinput' value="- enter a claim that you think is disputed - "/>
		<input class='submit' type="submit" value="Search"/>
	</form>

	<form id="newthing" method="GET" action={Urls.createClaim(c.arg("query"))}>
		<input type="hidden" name="query" value={c.arg("query")}/>
		Don't see your claim? &#8212; <input type='submit' class='submit' value="Create a New Claim"/>
	</form>

	<div class='claimresults'>
		<div class="claim">
			<a class="title" href="/thinklink/claim/6251">Global warming is a hoax</a>
			<div class="description"/>
			<span class="user">created by <a target="_blank" href="/thinklink/user/2">autoimport</a></span>
			- <a class="instances" href="/thinklink/claim/6251/findsnippets">seen <span class="count">89</span> times on the web</a>  
			- 
			<a onclick="reportSpam(this,6251)">report spam</a>
		</div>
	</div>


</div>
</div>
